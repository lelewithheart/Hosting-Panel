generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id            Int            @id @default(autoincrement())
  email         String         @unique
  passwordHash  String
  isAdmin       Boolean        @default(false)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  subscriptions Subscription[]
  upgradePurchases UpgradePurchase[]
  botUpgradeAssignments BotUpgradeAssignment[]
  customPlanRequests CustomPlanRequest[]
}

model Subscription {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  plan      String
  quantity  Int      @default(1)
  tier      String   @default("standard")
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  canceledAt DateTime?
  stripeCustomerId     String?
  stripeSubscriptionId String?
  stripeCheckoutId     String?
}

model UpgradePurchase {
  id              Int      @id @default(autoincrement())
  user            User     @relation(fields: [userId], references: [id])
  userId          Int
  kind            String   // ram | qol | one_time
  sku             String   // e.g., 128, 256, priority_support
  tier            String?  // standard | premium (nullable for QoL)
  quantity        Int      @default(1)
  status          String   @default("active")
  stripeSessionId String?
  createdAt       DateTime @default(now())
}

model BotUpgradeAssignment {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  botId     Int
  kind      String
  sku       String
  tier      String?
  quantity  Int      @default(1)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, botId, kind, sku, tier])
}

model Bot {
  id        Int      @id @default(autoincrement())
  userId    Int
  name      String
  plan      String   @default("nano")
  createdAt DateTime @default(now())
}

model CustomPlanRequest {
  id         Int      @id @default(autoincrement())
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  requirements String
  budget     String?
  timeframe  String?
  status     String   @default("new")
  createdAt  DateTime @default(now())
}
